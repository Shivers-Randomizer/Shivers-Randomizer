<Window x:Class="Shivers_Randomizer.ColorPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Color Picker"
        Width="550" Height="450"
        Background="#FF333333">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Labels -->
        <StackPanel x:Name="stackPanelColorTarget" Grid.Column="0" Background="#FF333333" Margin="0,0,10,0">
            <TextBlock FontSize="16" Text="Select Color Target:" FontWeight="Bold" Margin="0 0 0 8" Foreground="White"/>

            <!-- Your 12 labels here, you can bind them or hardcode for now -->
            <Label x:Name="labelBackground" FontSize="16" Content="Background" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelLocation" FontSize="16" Content="Location" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelAsh" Content="Ash" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelCloth" Content="Cloth" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelCrystal" Content="Crystal" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelLightning" Content="Lightning" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelMetal" Content="Metal" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelOil" Content="Oil" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelSand" Content="Sand" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelWater" Content="Water" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelWax" Content="Wax" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>
            <Label x:Name="labelWood" Content="Wood" FontSize="16" Foreground="White" Margin="2" Padding="0" MouseLeftButtonUp="Label_Click"/>

            <!-- Reset button -->
            <Button Content="Reset to Defaults" Margin="4,10,4,0" Padding="4" HorizontalAlignment="Stretch" Click="ResetButton_Click"/>
        </StackPanel>

        <!-- Right: Color Grid placeholder -->
        <StackPanel Grid.Column="1">
            <TextBlock FontSize="16" Text="Choose a Color:" FontWeight="Bold" Margin="0 0 0 8" Foreground="White"/>
            <WrapPanel x:Name="ColorGrid" />

            <Border BorderThickness="1"
                 BorderBrush="White"
                 Margin="4">
                <Image x:Name="ColorSpectrum"
                     Width="360" Height="200"
                    IsEnabled="False"/>
            </Border>
        </StackPanel>


    </Grid>
</Window>
